{% import "_includes/forms" as forms %}


<div id="imageshop-{{ field.id }}" data-id="imageshop-{{ random }}">

    <div class="mb-2">
        <div class="imageshop-preview element removable large hasthum">
            {% if value.image %}
                <img src="{{ value.image }}" width="100">

                <div class="imageshop-label">
                    <div class="label"><span class="title">{{ value.title ?? value.code }}</span></div>
                    <a class="delete icon imageshop-remove" title="Remove"></a>
                </div>
            {% endif %}
        </div>
    </div>

    <button type="button" class="imageshop-trigger add icon dashed btn">{{ field.buttonText }}</button>
    <input type="hidden" class="imageshop-value" name="{{ name }}" value="{{ value.json | json_encode }}">
</div>
